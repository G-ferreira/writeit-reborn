{% extends 'nav.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}

    <style>
        div#box{
            width: 100%;
            height: 2px;
            background-color: #744e89;
        }

        div.container-fluid{
            padding: 40px 30px 10px 30px;
        }

        div#lista{
            padding-top: 30px;
        }

        a.list-group-item.list-group-item-action{
            margin-top: 5px;
            margin-bottom: 5px;
        }

    </style>

    <div class="container-fluid">
        <h1>Categorias</h1>
        <div id="box"></div>
        <div id="lista">
        <ul class="list-group">
            {% for categoria in lista %}
                <li class="d-flex justify-content-between">
                    <a href="/categorias/{{ categoria.id }}" class="list-group-item list-group-item-action">
                        {{ categoria.titulo|e }}
                    </a>
                </li>
            {% endfor %}
        </ul>
        </div>
    </div>
{% endblock %}
