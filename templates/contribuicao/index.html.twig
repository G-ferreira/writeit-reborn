{% extends 'nav.html.twig' %}

{% block title %}Contribuição{% endblock %}

{% block javascripts %}

    <script src="https://www.paypal.com/sdk/js?client-id=sb"></script>
    <script>paypal.Buttons().render('body');</script>

{% endblock %}

{% block body %}

    <style>

        img{
            padding-top: 30px;
            padding-bottom: 30px;
            align-content: center;
        }
        label{
            float: left;
        }

        .container{
            padding-top: 60px;
            padding-bottom: 80px;
        }

        img.img-responsive.image-resize{
            height: 200px;
            width: 200px;
            object-fit: cover;
        }

        div#formContribuicao button{
            background-color: #63a563;
            color: white;
            border-color: #63a563;
            width: 100%;
        }

        div#formContribuicao button:hover{
            background-color: #09863e;
            color: white;
            border-color: #09863e;
        }

    </style>

    <div class="container">
        <div class="row">
            <div class="col" id="col-img">
                <div class="text-center">
                    <h1>Contribuição</h1>
                    <img src="/uploads/images/autores/{{ autor.getImage }}" class="img-responsive image-resize">
                    <h4 class="font-weight-light">{{ autor.getApelido }}</h4>
                </div>
            </div>
            <div class="col">
                <div class="shadow p-3 mb-5 bg-white rounded">
                    <div id="formContribuicao">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}