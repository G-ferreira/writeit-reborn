{% extends 'nav.html.twig' %}

{% block title %}Contribuição{% endblock %}

{% block body %}

    <style>

        img{
            padding-top: 30px;
            padding-bottom: 30px;
            align-content: center;
        }
        h4{
            text-align: center;
        }
        label{
            float: left;
        }
    </style>

    <div class="wrapper">
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column bd-highlight mb-3">
                <img src="https://webkit.org/demos/srcset/image-src.png" class="card-img-top">
                <h4 class="font-weight-light">Autor</h4>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="p-2 bd-highlight">
                <div class="card text-center" id="card">
                    <div class="card-body">
                        <h4 class="card-title">Pagamento</h4>
                        <form action="" class="form-group">

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="numeroCartao">Número do Cartão</label>
                                    <input type="number" class="form-control" id="numeroCartao" placeholder="xxxx xxxx xxxx xxxx">

                                </div>
                                <div class="form-group col-md-4">
                                    <label for="dataVencimento">Data de Vencimento</label>
                                    <input type="date" class="form-control" id="dataVencimento">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="numeroCvv">CVV</label>
                                    <input type="number" class="form-control" id="numeroCvv" placeholder="CVV">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="nomeTitular">Nome do Titular</label>
                                    <input type="text" class="form-control" id="nomeTitular" placeholder="Nome do Titular">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="numeroCpf">CPF do Titular</label>
                                    <input type="number" class="form-control" id="numeroCpf" placeholder="CPF do Titular">
                                </div>
                                <br>
                                <button class="btn btn-primary btn-md">
                                    Concluir
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}