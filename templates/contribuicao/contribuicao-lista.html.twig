{% extends 'nav.html.twig' %}

{% block title %}Contribuições{% endblock %}

{% block body %}

    <style>
        div#box{
            width: 100%;
            height: 2px;
            background-color: #9452c7;
        }

        .container{
            padding-top: 40px;
        }

        div#lista{
            padding-top: 30px;
        }
    </style>

    <div class="container">
        <h1>Contribuições</h1>
        <div id="box"></div>
        <div id="lista">
            <ul class="list-group">
                {% for item in lista %}
                    <li  class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div class="p-2 bd-highlight">R${{ item.getValor }}</div>
                            <div class="p-2 bd-highlight">{{ item.getNomePagador }}</div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
