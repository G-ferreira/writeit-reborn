{% extends 'nav.html.twig' %}

{% block title %}Contribuições{% endblock %}

{% block body %}

    <style>
        div#box{
            width: 100%;
            height: 2px;
            background-color: #744e89;
        }

        .container{
            padding-top: 60px;
        }

        div#lista{
            padding-top: 30px;
        }

        a#button-nav{
            color: white;
            background-color: #744e89;
        }

        a.nav-link{
            color: #313131;
        }

        a.nav-link:hover{
            color: #666666;
        }

    </style>

    <div class="container">
        <h1>Contribuições</h1>
        <div id="box"></div>
        <div id="lista">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link" href="/contribuicao/lista">Recebidas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/contribuicao/feitas" id="button-nav">Feitas</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div id="divHistoria">

                        {% for item in lista %}
                            <li  class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div class="p-2 bd-highlight">R${{ item.getValor }}</div>
                                    <div class="p-2 bd-highlight">{{ item.getNomeAutor }}</div>
                                </div>
                            </li>
                        {% endfor %}

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
