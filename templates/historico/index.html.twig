{% extends 'nav.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>

    @import url('https://fonts.googleapis.com/css?family=Abel');

    .container{
        padding-top: 20px;
    }

    div#box{
        width: 100%;
        height: 2px;
        background-color: #744e89;
    }

    ul#list-historias.list-group{
        padding-top: 30px;
    }

    div.container{
        padding-top: 60px;
    }

    a#link-historia{
        color: #666666;
    }

    a#link-historia:hover{
        color: #313131;
        text-decoration: none;
    }

</style>

<div class="container">
    <h1>Hist√≥rico</h1>
    <div id="box"></div>

    <ul class="list-group" id="list-historias">
        {% for item in historico.getCapitulo %}
            <div class="card mb-3" style="width: auto">
                <div class="row no-gutters">
                    <div class="col-md-2">
{#                        <img src="/uploads/images/autores/{{ item.getImage }}" class="card-img" alt="...">#}
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <a href="/capitulo/{{ item.getId }}" class="card-title" id="link-historia">{{ item.getTitulo }}</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </ul>
</div>
{% endblock %}