{% extends 'nav.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>

    @import url('https://fonts.googleapis.com/css?family=Abel');

    html, body {
        background: #f3eaff;
        font-family: Abel, Arial, Verdana, sans-serif;
    }

    h2{
        margin-top: 10px;
    }

    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 14px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for item in historico.getCapitulo %}
        <a href="/capitulo/{{ item.getId }}">
            <p>{{ item.getIdHistoria }}</p>
            <p>{{ item.getTitulo }}</p>
        </a>
        <p>---------------------------</p>
    {% endfor %}
</div>
{% endblock %}
