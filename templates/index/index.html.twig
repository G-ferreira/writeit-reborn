{% extends 'nav.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>

    @import url('https://fonts.googleapis.com/css?family=Abel');

    html, body {
        background: #f3eaff;
        font-family: Abel, Arial, Verdana, sans-serif;
    }

    h2{
        margin-top: 10px;
    }

    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 14px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if variavel%}
        <h2>Bem-vindo, {{ variavel.apelido }}</h2>
    {% endif %}

    <h2>Autores</h2>
    <div class="row">
        {% for autor in autores %}
            <div class="card">
                <img src="" class="card-img" alt="">
                <div class="card-body">
                    <a href="/autores/{{ autor.getId }}">
                        {{ autor.getApelido }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <h2>Historias</h2>
    <div class="row">
        {% for historia in historias %}
            <div class="card mb-3" style="max-width: 340px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://dummyimage.com/80x114/969696/a1a4c4" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <a href="/historia/{{ historia.getId }}">
                                <h5 class="card-title">{{ historia.getTitulo }}</h5>
                            </a>
                            <p class="card-text">{{ historia.getSinopse }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
