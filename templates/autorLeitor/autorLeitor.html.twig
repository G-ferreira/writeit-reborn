{% extends 'base.html.twig' %}

{% block title %}Teste{% endblock %}

{% block body %}
<style>

    .caixa{
        width: 100%;
        height: 1000px;
        background: #744e89;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center
    }
    .box {
        width: 500px;
        height: 500px;
        padding: 30px 20px;
        background: #fff;
    }
    body {
        margin: 0px;
    }

    div#form button{
        float: right;
        background-color: #636163;
        border-color: #636163;
        margin-bottom: 30px;
    }

    div#form button:hover{
        background-color: #878587;
        border-color: #878587;
    }

</style>
<div class="caixa">
    <div class="box">
        <div id="form">
            {{ form(form) }}
        </div>
    </div>
</div>
{% endblock %}
