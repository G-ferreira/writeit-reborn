{% extends 'nav.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body %}

    <style>

        img{
            padding-top: 30px;
            padding-bottom: 30px;
            align-content: center;
        }

        h4{
            text-align: center;
        }

        img.card-img-top{
            width: 200px;
        }

    </style>

    <div class="wrapper">
        <div class="d-flex flex-column bd-highlight mb-3">
            <div class="d-flex justify-content-center">
                <div class="d-flex flex-column bd-highlight mb-3">
                    <img src="/uploads/images/autores/{{ autor.getImage }}" class="card-img-top">
                        <h4 class="font-weight-light">{{ autor.getApelido }}</h4>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="d-flex flex-column bd-highlight mb-3">
                    <a href="/contribuir/{{ autor.getId }}" class="btn btn-success btn-md">
                        Contribuir
                    </a>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                {{ include('historia-lista.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}