{% extends 'nav.html.twig' %}

{% block title %}Configuração{% endblock %}

{% block body %}
    <style>

        img{
            padding-top: 50px;
            padding-bottom: 5px;
            align-content: center;
        }
        h4{
            text-align: center;
        }
        div#dados{
            padding-top: 30px;
            padding-left: 50px;
            align-content: center;
        }

    </style>

    <div class="container">
        <div class="d-flex flex-row bd-highlight mb-3">
            <div class="p-2 bd-highlight">
                <img src="https://webkit.org/demos/srcset/image-src.png" class="card-img-top">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <h4 class="font-weight-light">Nome</h4>
                {% endif %}
            </div>
            <div class="p-2 bd-highlight">
                <div id="dados">
                    <div class="d-flex flex-column bd-highlight mb-3">
                        <div class="p-2 bd-highlight">
                            <div class="d-flex justify-content-center">

                                    <h3 class="font-weight-light">Meus Dados</h3>

                                    <button class="btn btn-light">
                                        <i class="fas fa-pen"></i>
                                    </button>

                            </div>


                        </div>
                        <div class="p-2 bd-highlight">
                            <label for="">Email
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <h5 class="font-weight-light">{{ app.user.email }}</h5>
                                {% endif %}
                        </div>
                        <div class="p-2 bd-highlight">
                            <label for="">CPF</label>
                            <h5 class="font-weight-light">123.456.789-10</h5>
                        </div>
                        <div class="p-2 bd-highlight">
                            <label for="">Agência</label>
                            <h5 class="font-weight-light">0001</h5>
                        </div>
                        <div class="p-2 bd-highlight">
                            <label for="">Banco</label>
                            <h5 class="font-weight-light">100</h5>
                        </div>
                        <div class="p-2 bd-highlight">
                            <label for="">Conta</label>
                            <h5 class="font-weight-light">1234567-8</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}