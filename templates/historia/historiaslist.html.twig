        <div id="box"></div>

        <ul class="list-group" id="list-historias">
            {% for historia in historias %}
                <div class="card mb-3 shadow-sm p-3 mb-5 bg-white rounded" style="width: auto">
                    <div class="row no-gutters">
                        <div class="col-md-2">
                            <img src="https://dummyimage.com/600x400/f5f2ef/fff" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a href="/historia/{{ historia.getId }}" class="card-title">{{ historia.getTitulo }}</a>
                                <div class="overflow-hidden">{{ historia.getSinopse }}</div>
                                <p class="card-text"><small class="text-muted">{{ historia.getClassificacao }}</small></p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div id="button-editar">
                                <ul class="list-group">
                                    <a href="/capitulos/create/{{ historia.getId }}" class="btn btn-default" id="button-adicionarCap">Adicionar Capitulo</a>
                                    <a href="/historia/show/{{ historia.getId }}" class="btn btn-default" id="button-editar">Visualizar</a>
                                    <a href="/historia/delete/{{ historia.getId }}" class="btn btn-secondary" id="button-remover">Remover</a>
